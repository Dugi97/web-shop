{% extends "base_security.html.twig" %}

{% block body %}
    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col col-lg-7">
                <div class="p-5 shadow-lg bg-white rounded">
                    <h2 class="mt-0 mb-5 text-center">Register</h2>
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>First name</label>
                                    {{ form_row(form.name) }}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Last name</label>
                                    {{ form_row(form.lastName) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Username</label>
                                    {{ form_row(form.username) }}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group {% if form.plainPassword.first.vars.errors|length > 0 %}has-error{% endif %}">
                                    <label>Email</label>
                                    {{ form_row(form.email) }}
                                    {% if form.email.vars.errors|length > 0 %}
                                        <p class="my-2 text-danger">This email already exist.</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Address</label>
                                    {{ form_row(form.address) }}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label>City</label>
                                    {{ form_row(form.city) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>State</label>
                                    {{ form_row(form.state) }}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Post code</label>
                                    {{ form_row(form.post_code) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Phone number</label>
                                    {{ form_row(form.phone) }}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group {% if form.plainPassword.first.vars.errors|length > 0 %}has-error{% endif %}">
                                    <label>Password</label>
                                    {{ form_row(form.plainPassword.first) }}
                                    {% if form.plainPassword.first.vars.errors|length > 0 %}
                                        <p class="my-2 text-danger">The password fields must match.</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Repeat password</label>
                                    {{ form_row(form.plainPassword.second) }}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Profile picture</label>
                                    {{ form_row(form.file) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-success btn-block">Register</button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-secondary btn-block" onclick="window.history.go(-1); return false;">Back</button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}