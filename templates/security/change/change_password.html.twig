
{% extends 'base_security.html.twig' %}

{% block title %}Change password{% endblock %}

{% block body %}
    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col col-lg-6">

                <div class="p-5 shadow-lg bg-white rounded">
                    <h2 class="text-center my-0 mb-4">Change password</h2>
                    {{ form_start(form) }}
                        <div class="form-group">
                            <label>Current password</label>
                            {{ form_row(form.current) }}
                        </div>
                        <div class="form-group">
                            <label>New password</label>
                            {{ form_row(form.new) }}
                        </div>
                        <div class="form-group">
                            <button class="w-25 float-left btn btn-success changePassword">Submit</button>
                            <button class="w-25 float-right btn btn-secondary" onclick="window.history.go(-1); return false;">Back</button>
                            <div class="clearfix"></div>
                        </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
