{% extends "base_security.html.twig" %}

{% block title %}Forgot password{% endblock %}

{% block body %}

    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col col-lg-6">

                <div class="p-5 shadow-lg bg-white rounded">
                    <h2 class="text-center my-0 mb-4">Forgot password</h2>
                    {{ form_start(form) }}
                        <div class="form-group">
                            <label>Enter your email address</label>
                            {{ form_row(form.email) }}
                        </div>
                        <div class="form-group">
                            <button type="submit" class="w-25 float-left btn btn-success forgot-password">Submit</button>
                            <button class="w-25 float-right btn btn-secondary" onclick="window.history.go(-1); return false;">Back</button>
                            <div class="clearfix"></div>
                        </div>
                    {{ form_end(form) }}
                    <div class="alert alert-danger d-none info" role="alert">
                        <p class="my-0"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}