{% extends "base_security.html.twig" %}

{% block title %}Edit profile{% endblock %}

{% block body %}

    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col col-lg-7">
                <div class="p-5 shadow-lg bg-white rounded">
                    <h2 class="text-center my-0 mb-5">Edit profile</h2>
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>First name</label>
                                    {{ form_row(form.name, {'attr': {'value': user.name}}) }}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Last name</label>
                                    {{ form_row(form.lastName, {'attr': {'value': user.lastName}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    {{ form_row(form.email, {'attr': {'value': user.email}}) }}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Username</label>
                                    {{ form_row(form.username, {'attr': {'value': user.username}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>City</label>
                                    {{ form_row(form.city, {'attr': {'value': user.city}}) }}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Address</label>
                                    {{ form_row(form.address, {'attr': {'value': user.address}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Post code</label>
                                    {{ form_row(form.post_code, {'attr': {'value': user.postCode}}) }}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label>State</label>
                                    {{ form_row(form.state, {'attr': {'value': user.state}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Phone</label>
                                    {{ form_row(form.phone, {'attr': {'value': user.phone}}) }}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Profile picture</label>
                                    {{ form_row(form.file) }}
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group {% if form.plainPassword.first.vars.errors|length > 0 %}has-error{% endif %}">
                                    <label>Password</label>
                                    {{ form_row(form.plainPassword.first) }}
                                    {% if form.plainPassword.first.vars.errors|length > 0 %}
                                        <p class="my-2 text-danger">The password fields must match.</p>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Password Repeat</label>
                                    {{ form_row(form.plainPassword.second) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-block btn-success">Submit</button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-block btn-secondary" onclick="window.history.go(-1); return false;">Back</button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}