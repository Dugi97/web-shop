{% extends "base_security.html.twig" %}

{% block body %}
    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col col-lg-6">

                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <div class="p-5 shadow-lg bg-white rounded">

                    <div class="text-center">
                        <img width="60" src="{{ asset('images/login.svg') }}" class="mb-3" alt="Image">
                    </div>
                    <form action="{{ path('login') }}" method="post">
                        <div class="form-group">
                            <label>Enter username</label>
                            <input type="text" class="form-control border-dark border rounded-0" name="_username" value="{{ last_username }}">
                        </div>
                        <div class="form-group">
                            <label class="w-100">
                                Password
                                <a href="/forgot/password" class="float-right">
                                    Forgot Password?
                                </a>
                            </label>
                            <input type="password" class="form-control border-dark border rounded-0" name="_password">
                        </div>
                        <input type="hidden" name="_target_path" value="/admin" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Login</button>
                        </div>
                    </form>
                    {#<div class="row justify-content-center">#}
                        {#<div class="col-md-auto">#}
                            {#Don't have an account?#}
                            {#<a href="/register">Create One</a>#}
                        {#</div>#}
                    {#</div>#}
                </div>
            </div>
        </div>
    </div>
{% endblock %}